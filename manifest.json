{
    "manifest_version": 3,
    "name": "무한 크래프트: Infinite Craft 한글 패치",
    "version": "1.0",
    "description": "웹 게임 Infinite Craft의 한글 패치 확장 프로그램입니다.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://neal.fun/*"
    ],
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://neal.fun/*"],
            "js": ["content.js"]
        }
    ]
}
